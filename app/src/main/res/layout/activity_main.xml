<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/wendy_one"
        android:text="You are a verified member !"
        android:textColor="#2E0095"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wendy_one"
            android:text="Hello,"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginRight="4dp"/>

        <TextView
            android:id="@+id/Textview_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wendy_one"
            android:text="  nickname"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departure"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_dep"
        android:hint="출발역을 입력하세요."
        />

    <ListView
        android:id="@+id/Listview_dep"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FCFAFA"
        android:clickable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_des"
        android:hint="도착역을 입력하세요."

        />

    <ListView
        android:id="@+id/Listview_des"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FCFAFA"
        android:clickable="true"

        />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="search"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:id="@+id/Button_cal"
        />


</LinearLayout>